{
  "name": "ai-assistant",
  "version": "1.0.0",
  "main": "electron/main.js",
  "devDependencies": {
    "electron": "38.2.0",
    "electron-builder": "26.0.12"
  },
  "scripts": {
    "dev": "electron .",
    "pack": "electron-builder --dir",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.skullowner.aiassistant",
    "productName": "AI Assistant",
    "directories": {
      "buildResources": "assets",
      "output": "build"
    },
    "asar": true,
    "files": [
      "frontend/build/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "backend/dist",
        "to": "backend"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/ai-logo.ico"
    }
  },
  "dependencies": {
    "axios": "1.12.2",
    "electron-is-dev": "3.0.1",
    "wait-port": "1.1.0"
  }
}
